# ===== Word Learning Assistant =====
# Copy this file to ".env" and fill in secrets once.

# Core runtime
PYTHONUNBUFFERED=1
TZ=UTC

# LLM provider: openai | deepseek
WORD_ASSISTANCE_LLM_PROVIDER=openai
WORD_ASSISTANCE_LLM_MODEL=gpt-4o-mini
WORD_ASSISTANCE_LLM_BASE_URL=

# OpenAI
OPENAI_API_KEY=
WORD_ASSISTANCE_OPENAI_BASE_URL=https://api.openai.com/v1

# Card generation model strategy
# quality_first | fast_first | quality_only | fast_only
WORD_ASSISTANCE_CARD_LLM_STRATEGY=quality_first
WORD_ASSISTANCE_CARD_LLM_QUALITY_MODEL=gpt-4.1-mini
WORD_ASSISTANCE_CARD_LLM_FAST_MODEL=gpt-4o-mini

# Speech
WORD_ASSISTANCE_STT_MODEL=gpt-4o-mini-transcribe
WORD_ASSISTANCE_TTS_MODEL=gpt-4o-mini-tts

# Optional DeepSeek
DEEPSEEK_API_KEY=
